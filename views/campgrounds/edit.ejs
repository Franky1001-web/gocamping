<% layout('layouts/boilerplate') %> 
<div class="row bg-white text-dark rounded my-auto p-3">
    <h1 class="text-center">Edit Campground</h1>
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validate-this" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="campground[title]" value="<%= campground.title %>" required>
        </div>
        <div class="valid-feedback fs-6">
            Nice Name!
          </div>
        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="campground[location]" value="<%= campground.location %>" required>
        </div>
        <div class="valid-feedback fs-6">
            Looks good!
          </div>
          <input type="file" name="image" id="" multiple>
        <div class="mb-3">
            <% for( let index = 0; index < campground.images.length; index++ ) { %>
                <img src="<%= campground.images[index].url %> " alt="" height="200" width="200">
                <div class="form-check-inline">
                    <input type="checkbox" name="deleteImages[]" id="image-<%= index %>" value="<%= campground.images[index].fileName %>">
                </div>
                <label for="image-<%= index %> ">Delete this one</label>
            <% } %>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input type="text" class="form-control" name="campground[price]" id="price" aria-label="Amount (to the nearest dollar)" value="<%= campground.price %>" required>
                <span class="input-group-text">.00</span>
              </div>
        </div>
        <div class="valid-feedback fs-6">
            Looks good!!
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Tell me somethin about it</label>
            <textarea class="form-control" type="text" id="description" name="campground[description]" required><%= campground.description %> </textarea>
        </div>
        <div class="valid-feedback fs-6">
            Good to go!!
        </div>
        <div class="mb-3">
            <button class="btn btn-info text-light fs-5">Edit Campground</button>
        </div>
    </form>
    <a class="text-light text-decoration-none" href="/campgrounds/<%= campground._id%>">Back To Campground</a>
</div>
    

