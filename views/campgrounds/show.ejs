<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/starrating_basic.css">


<div class="row">
    <div class="col-6 text-dark">
        <div class="card pb-2 mb-3">
          <div id="campgroundcarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <% for(let i=0;i<campground.images.length;i++){ %>
                <div class="carousel-item <%= i===0 ? 'active' : '' %>  ">
                  <img src="<%= campground.images[i].url %> " class="d-block w-100" alt="..." height="550" width="400">
                </div>
                <% } %>    
            </div>
            <% if(campground.images.length>1){ %>
              <button class="carousel-control-prev" type="button" data-bs-target="#campgroundcarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#campgroundcarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
              <% } %>  
          </div>
            <img src="<%= campground.image %>" class="card-img-top" alt="">
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %></h5>
              <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= campground.location %> </li>
              <li class="list-group-item">Created By <%= campground.owner.username %> </li>
              <li class="list-group-item"><%= campground.price %>$ per night</li>
            </ul>
            <% if(loggedInUser && campground.owner.equals(loggedInUser._id)) {%> 
              <div class="card-body d-flex justify-content-around">
                <a href="/campgrounds/<%=campground._id%>/edit" class="card-link btn btn-primary fs-5">Edit</a>
                <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST" style="display: inline-block;">
                    <button class="btn btn-danger text-light fs-5">Delete</button>
                </form>
            </div>
              <% } %> 
            <a class="fs-5 text-dark d-block mx-auto" href="/campgrounds">All Campgrounds</a>
          </div>
    </div>
    <div class="col-6">
      <div id='map' style='width: 633px; height: 300px; border-radius: 12px;'></div>
      <% if(campground.reviews.length){ %>
        <div style="overflow-y: auto; max-height: 600px; border-radius: 12px; scroll-behavior: smooth; scrollbar-width: 12px; scroll-margin-right: 3px;" class="border border-light p-2 mt-3">
          <% for(let review of campground.reviews){ %>
            <div class="card text-dark mt-3">
              <div class="mb-3 card-body">
                <h6 class="card-subtitle mb-2 text-muted">By <strong><%= review.owner.username %></strong> </h6>
                <p class="starability-result" data-rating="<%= review.rating %>">
                  Rated: <%= review.rating %> stars
                </p>
                
                <p>Review: <%= review.body %> </p>
                <% if (loggedInUser && review.owner.equals(loggedInUser._id)) { %>
                   <form action="/campgrounds/<%= campground._id %>/review/<%= review._id %>?_method=DELETE" method="POST">
                      <button class="btn btn-danger">Delete</button>
                   </form>
                  <% } %>
              </div>
            </div>
          <% } %> 
        </div>
      <% } %> 
      <% if(loggedInUser){ %> 
        <h4 class="mt-4">Have you been here? Please give us some reviews and rating too.</h4>
          <form action="/campgrounds/<%= campground._id %>/review" method="POST" class="mb-3 validate-this" novalidate>
            <fieldset class="starability-basic">
              <legend>First rating:</legend>
              <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
              <input type="radio" id="first-rate1" name="rating" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="rating" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="rating" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="rating" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="rating" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>           
            <div class="mb-3">
              <label class="form-label" for="body">Review</label>
              <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
              <div class="valid-feedback fs-5" style="color: #70e000;">
                Looks Good!!
              </div>
            </div>
            <button class="btn btn-success">Submit</button>
          </form>
          <% } %> 
    </div>
</div>

<script>
  const camp = JSON.parse('<%- JSON.stringify(campground)%>') ;
</script>

<script>
  const mboxToken = '<%- process.env.MAPBOX_TOKEN %>'
  mapboxgl.accessToken = mboxToken;
  const map = new mapboxgl.Map({
  container: 'map', // container ID
  style: 'mapbox://styles/mapbox/streets-v11', // style URL
  center: camp.mapping.coordinates, // starting position [lng, lat]
  zoom: 9 // starting zoom
  });

  new mapboxgl.Marker()
  .setLngLat(camp.mapping.coordinates)
  .setPopup(
    new mapboxgl.Popup({offset: 25})
    .setHTML(
      `<h3>${camp.title}</h3>`
    )
  )
  .addTo(map)

  map.addControl(new mapboxgl.NavigationControl());
  
</script>
  
